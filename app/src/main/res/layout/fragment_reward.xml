                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/needCoinGoogle"
                    app:layout_constraintStart_toEndOf="@+id/needCoinGoogle"
                    app:layout_constraintTop_toTopOf="@+id/needCoinGoogle" />

                <ProgressBar
