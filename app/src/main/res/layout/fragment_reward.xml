                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imgCoinGoogle"
                    app:layout_constraintStart_toEndOf="@+id/imgCoinGoogle"
